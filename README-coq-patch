This patch for coq comes from Hugo Herbelin at

     http://pauillac.inria.fr/~herbelin/coq/index.html

It is needed to compile some of the *.v files.

diff --git a/kernel/reduction.ml b/kernel/reduction.ml
index aa50f78..5e9b0d5 100644
--- a/kernel/reduction.ml
+++ b/kernel/reduction.ml
@@ -182,11 +182,7 @@ let sort_cmp pb s0 s1 cuniv =
     | (Prop c1, Prop c2) ->
         if c1 = c2 then cuniv else raise NotConvertible
     | (Prop c1, Type u) when pb = CUMUL -> assert (is_univ_variable u); cuniv
-    | (Type u1, Type u2) ->
-	assert (is_univ_variable u2);
-	(match pb with
-           | CONV -> enforce_eq u1 u2 cuniv
-	   | CUMUL -> enforce_geq u2 u1 cuniv)
+    | (Type u1, Type u2) -> cuniv
     | (_, _) -> raise NotConvertible
 
 
